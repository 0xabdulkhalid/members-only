script.
    const btn = document.getElementById('menu-toggler');
    const navMenu = document.getElementById('navMenu');

    function toggle () {
        navMenu.classList.toggle('opacity-0');
        navMenu.classList.toggle('invisible');
        btn.classList.toggle('menu-active')
    }
